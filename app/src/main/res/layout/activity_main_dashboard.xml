<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_dashboard">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="342dp"
        android:layout_height="78dp"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:text="How much would you like to drink ?"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/slightlybuzzed"
        android:layout_width="135dp"
        android:layout_height="91dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:text="Slightly buzzed"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="290dp" />

    <Button
        android:id="@+id/buzzed"
        android:layout_width="135dp"
        android:layout_height="91dp"
        android:layout_marginBottom="104dp"
        android:text="Buzzed"
        app:layout_constraintBottom_toTopOf="@+id/slightlybuzzed"
        tools:layout_editor_absoluteX="51dp" />

    <Button
        android:id="@+id/party"
        android:layout_width="131dp"
        android:layout_height="90dp"
        android:layout_marginStart="208dp"
        android:layout_marginLeft="208dp"
        android:layout_marginTop="96dp"
        android:text="At a party "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/college"
        android:layout_width="135dp"
        android:layout_height="91dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="42dp"
        android:text="College students on a fiday"
        app:layout_constraintBottom_toTopOf="@+id/gohome"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/gohome"
        android:layout_width="351dp"
        android:layout_height="88dp"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="I WANT TO GO HOME"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>