<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_dashboard">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="342dp"
        android:layout_height="78dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="45dp"
        android:text="How much would you like to drink ?"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/buzzed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/slightlybuzzed"
        android:layout_width="135dp"
        android:layout_height="91dp"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="53dp"
        android:text="Slightly buzzed"
        app:layout_constraintBottom_toTopOf="@+id/gohome"
        app:layout_constraintEnd_toStartOf="@+id/college"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buzzed" />

    <Button
        android:id="@+id/buzzed"
        android:layout_width="135dp"
        android:layout_height="91dp"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Buzzed"
        app:layout_constraintBottom_toTopOf="@+id/slightlybuzzed"
        app:layout_constraintEnd_toStartOf="@+id/party"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/party"
        android:layout_width="129dp"
        android:layout_height="90dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="54dp"
        android:text="At a party "
        app:layout_constraintBottom_toTopOf="@+id/college"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buzzed"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/college"
        android:layout_width="135dp"
        android:layout_height="91dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="65dp"
        android:text="College students on a fiday"
        app:layout_constraintBottom_toTopOf="@+id/gohome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/slightlybuzzed"
        app:layout_constraintTop_toBottomOf="@+id/party" />

    <Button
        android:id="@+id/gohome"
        android:layout_width="351dp"
        android:layout_height="88dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="I WANT TO GO HOME"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slightlybuzzed" />
</android.support.constraint.ConstraintLayout>