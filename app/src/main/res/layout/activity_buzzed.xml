<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Slightly_Buzzed">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="384dp"
        android:layout_height="158dp"
        android:layout_marginBottom="20dp"
        android:text="Please specify the kind of drink that you would like to have!"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/collegebeer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/collegebeer"
        android:layout_width="183dp"
        android:layout_height="93dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:text="Beer"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/BZcocktail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/BZcocktail"
        android:layout_width="183dp"
        android:layout_height="83dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="20dp"
        android:text="Cocktail"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/collegespirits"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/collegebeer"
        app:layout_constraintVertical_bias="0.2" />

    <Button
        android:id="@+id/collegespirits"
        android:layout_width="183dp"
        android:layout_height="93dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="32dp"
        android:text="Spirits"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BZcocktail" />
</android.support.constraint.ConstraintLayout>